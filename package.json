{
  "name": "kmv-refinement",
  "version": "0.1.0",
  "private": true,
  "description": "KMV Prompt Refinement Service (StudyPlanV1 + RefinedPromptV1)",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/server.ts",
    "start": "node dist/src/server.js",
    "test": "vitest run --reporter=default",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "sbom": "cyclonedx-npm --output-file sbom.json",
    "format": "prettier --write \"**/*.{ts,js,json,md,yaml,yml}\"",
    "diag": "tsx scripts/diagnostics.ts"
  },
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "express": "^4.19.2",
    "openai": "^4.67.0",
    "pino": "^9.5.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.0.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "supertest": "^7.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
