{
  "$id": "UndoLog.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UndoLog",
  "type": "object",
  "required": ["actions"],
  "properties": {
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "ts", "target_path", "content_hash"],
        "properties": {
          "action": { "type": "string" },
          "ts": { "type": "string", "format": "date-time" },
          "target_path": { "type": "string" },
          "content_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    }
  },
  "additionalProperties": false
}
