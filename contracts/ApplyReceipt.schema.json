{
  "$id": "https://kmv.local/schemas/ApplyReceipt.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApplyReceipt",
  "type": "object",
  "additionalProperties": false,
  "required": ["path", "bundle_hash", "content_hash", "bytes", "written_at"],
  "properties": {
    "path": { "type": "string" },
    "bundle_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "content_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "bytes": { "type": "integer", "minimum": 0 },
    "written_at": { "type": "string", "format": "date-time" }
  }
}
